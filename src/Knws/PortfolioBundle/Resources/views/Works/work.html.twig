{% extends "KnwsPortfolioBundle::layout.html.twig" %}
{% block title %}{{title}} â€” {{ parent() }}{% endblock %}
{% block content %}
<div class="clients skills container_12">
    <h2 class="grid_12">{{works.title}}</h2>
    <div class="grid_2"><a href="{{ path('knws_portfolio_work', {'slug': works.next}) }}"><img src="{{asset('bundles/knwsportfolio/images/left.png')}}"></a></div>
    <li class="{{works.slug}} projects grid_2">
    <h3>
        <a href="{{works.url|raw}}">
        <span class="asset"></span>
        {{works.assetTitle}}
        <span class="date">{{works.date}}</span>
        </a>
    </h3>
    {% if works.tags.show == true %}<a class="tag {{works.tags.class}}" href="{{works.tags.url}}">{{works.tags.title}}</a>{% endif %}
    </li>

    <div class="grid_6">
        {{works.description|raw}}
    </div>

    <div class="grid_2"><a href="{{ path('knws_portfolio_work', {'slug': works.prev}) }}"><img src="{{asset('bundles/knwsportfolio/images/right.png')}}"></a></div>
</div>
{% if works.carousel > 0 %} {% include "KnwsPortfolioBundle:Works:carousel.html.twig" %} {% endif %}
{% endblock %}



